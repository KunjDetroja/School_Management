{
  "info": {
    "name": "School Management API",
    "description": "Collection for School Management API including Add School and List Schools endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add School",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"ABC School\",\n    \"address\": \"123 Main Street\",\n    \"latitude\": 40.7128,\n    \"longitude\": -74.0060\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/addSchool",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "addSchool"]
        }
      },
      "response": [
        {
          "name": "Success Response",
          "status": "Created",
          "code": 201,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n    \"message\": \"School added successfully.\",\n    \"schoolId\": 1\n}"
        },
        {
          "name": "Validation Error (Missing Fields)",
          "status": "Bad Request",
          "code": 400,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n    \"error\": \"All fields are required.\"\n}"
        },
        {
          "name": "Internal Server Error",
          "status": "Internal Server Error",
          "code": 500,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n    \"error\": \"Failed to add school.\",\n    \"details\": \"Error details here.\"\n}"
        }
      ]
    },
    {
      "name": "List Schools",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/api/listSchools?latitude=40.7128&longitude=-74.0060",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "listSchools"],
          "query": [
            {
              "key": "latitude",
              "value": "40.7128"
            },
            {
              "key": "longitude",
              "value": "-74.0060"
            }
          ]
        }
      },
      "response": [
        {
          "name": "Success Response",
          "status": "OK",
          "code": 200,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "[\n    {\n        \"id\": 1,\n        \"name\": \"ABC School\",\n        \"address\": \"123 Main Street\",\n        \"latitude\": 40.7128,\n        \"longitude\": -74.006,\n        \"distance\": 0\n    },\n    {\n        \"id\": 2,\n        \"name\": \"XYZ School\",\n        \"address\": \"456 Elm Street\",\n        \"latitude\": 40.8136,\n        \"longitude\": -74.0064,\n        \"distance\": 5.58\n    }\n]"
        },
        {
          "name": "Validation Error (Missing Parameters)",
          "status": "Bad Request",
          "code": 400,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n    \"error\": \"Latitude and longitude are required.\"\n}"
        },
        {
          "name": "Internal Server Error",
          "status": "Internal Server Error",
          "code": 500,
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": "{\n    \"error\": \"Failed to retrieve schools.\",\n    \"details\": \"Error details here.\"\n}"
        }
      ]
    }
  ]
}
